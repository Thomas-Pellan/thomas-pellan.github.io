---
import {Image} from '@astrojs/image/components';//Do not Remove that !
import Menu from '../components/Menu.astro';
import Icons from '../components/Icons.astro';
import Icon from 'astro-icon'
import {SEO} from 'astro-seo'
import '../styles/m-header.scss';

const {title, seoData} = Astro.props;

//Handling trailing slash in canonicals
let canonical = seoData.canonical ? seoData.canonical : Astro.request.url.href
if(canonical && canonical.slice(-1) === '/'){
    canonical = canonical.slice(0, -1)
}
---
<head class="m-header">
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width"/>
    <Icons/>
    {seoData && (
            <SEO
                    canonical={canonical}
                    title={seoData.title}
                    description={seoData.description}
                    noindex={seoData.noindex}/>)}
    <link rel="sitemap" href="/sitemap-index.xml">
    <meta name="generator" content={Astro.generator}/>
    <title>{title}</title>

    <a href="/" class="m-header-title">
        <Image
                src="/img/logo-50x50.webp"
                format="webp"
                width="50"
                height="50"
                alt="logo-ibf-equicoaching"
        />
        <p class="m-header-title-text">IBF Equicoaching</p>
    </a>
    <div class="m-header-line"/>
    <Icon class="m-header-icon hidden" name="ic:baseline-close"/>
    <Icon class="m-header-icon" name="ic:round-menu"/>
    <nav class="m-header-menu">
        <Menu/>
    </nav>
    <div class="m-header-mobile-overlay hidden"/>
</head>
