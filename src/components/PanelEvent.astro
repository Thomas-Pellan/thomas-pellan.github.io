---
import Icon from 'astro-icon';
import '../styles/m-panel.scss';

const {id, title} = Astro.props;
---
<div class="m-panel">
    <div class="m-panel-title" id=`panel-header${id ? '-' + id : ''}`>
        <p class="m-panel-title-text">
            {title}
        </p>
        <Icon class="m-panel-title-icon" name="ic:baseline-keyboard-arrow-down"/>
    </div>
    <div class="m-panel-content" id=`panel-content${id ? '-' + id : ''}`>
        <div class="m-panel-content-event">
            <div class="m-panel-content-slot">
                <slot name="panel-content-1" />
            </div>
            <div class="m-panel-content-slot">
                <slot name="panel-content-2" />
            </div>
        </div>
    </div>
</div>